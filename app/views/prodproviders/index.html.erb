<p id="notice"><%= notice %></p>

<h1>Product Poviders Catalog</h1>

<div class="container"> 
  <div class="links"><%= link_to 'New Item', new_prodprovider_path %></div>
  <div class="links"><%= link_to 'Back to Main', root_path %></div>
</div>

<table id="tabledata">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contactname</th>
      <th>Available?</th>
      <th colspan="3">Operations</th>
    </tr>
  </thead>

  <tbody>
    <% @prodproviders.each do |prodprovider| %>
      <tr>
        <td><%= prodprovider.name %></td>
        <td><%= prodprovider.contactname %></td>
        <td><%= prodprovider.isactive %></td>
        <td class="links"><%= link_to 'Show', prodprovider %></td>
        <td class="links"><%= link_to 'Edit', edit_prodprovider_path(prodprovider) %></td>
        <td class="links"><%= link_to 'Destroy', prodprovider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

